<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/rounded</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">8dp</item>
        <item name="android:tint">?attr/colorPrimaryVariant</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="CheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_button</item>
    </style>

    <style name="WindowAnimationStyle">
        <item name="android:activityOpenEnterAnimation">@anim/window_enter_animation</item>
        <item name="android:activityOpenExitAnimation">@anim/window_exit_animation</item>
    </style>
</resources>